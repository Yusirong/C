#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int main()
{
double num = 1.0;
double sum = 0.0;
float amount=0.0;

for (; num <= 1000; num++)
{
	printf("please enter your amount:\n");
	scanf("%f", &amount);
	sum += amount;
	if (sum > 100000)
	{
		break;
	}
}
printf("num=%4.0f\n", num);
printf("average=%f\n", sum / num);
	return;
}
