#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int fac(int n)
{
	int f;
	if (n < 0)
	{
		printf("erro!\n");
	}
	else if (n == 0 | n == 1)
		f = 1;
	else    
	    f = fac(n - 1) * n;
	return f;
}
int main()
{
	int fac(int);
	int a;
	printf("please enter a number:\n");
	scanf("%d", &a);
	printf("%d!=%d\n", a, fac(a));
  return;
}
